<html>
    <head>
        <style>
            .title   {font-size: 16px; color: #3cb371;}
            .body {font-size: 12px; color: #4A4A4A;}
            body { text-align: center}
        </style>
        <title> Posts </title>
    </head>
    
    <body>
        <ol>
        <% posts.forEach( (post, idx) => { %>
            <li class="title">                   
                <p > <%=post.title%> </p> 
                <p class="body"><%= post.body %></p>
            </li> 
        <% }) %>
        </ol>

        <!-- <%= posts %> -->
    </body>


</html>